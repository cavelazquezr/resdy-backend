{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"outDir": "./build",
		"baseUrl": "./src",
		"paths": {
			"@rating-service/*": ["api/rating-service/*"],
			"@menu-service/*": ["api/menu-service/*"],
			"@auth-service/*": ["api/authentication-service/*"],
			"@restaurant-service/*": ["api/restaurant-service/*"],
			"@rootTypes/*": ["types/*"],
			"@root/*": ["/*"]
		},
		"esModuleInterop": true,
		"strict": true,
		"noImplicitAny": false,
		"importHelpers": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"typeRoots": ["node_modules/@types", "src/@types"],
		"skipLibCheck": true
	},
	"include": ["src"]
	// "ts-node": {
	// 	"require": ["tsconfig-paths/register"]
	// }
}
